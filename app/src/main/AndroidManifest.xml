<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="hr.fer.solffeginator" >

    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />

    <application
        android:name=".App"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name=".MainActivity"
            android:label="@string/app_name"
            android:screenOrientation="landscape" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".HelpActivity"
            android:label="@string/title_activity_help" >
        </activity>
        <activity
            android:name=".TopicActivity"
            android:label="@string/title_activity_topic" >
        </activity>
        <activity
            android:name=".TappingActivity"
            android:label="@string/title_activity_tapping" >
        </activity>
        <activity
            android:name=".VrijednostNota"
            android:label="@string/title_activity_vrijednost_nota"
            android:screenOrientation="landscape" >
        </activity>
        <activity
            android:name=".LevelSelectActivity"
            android:label="@string/title_activity_level_select" >
        </activity>
        <activity
            android:name=".PogodiMelodiju"
            android:label="@string/title_activity_pogodi_melodiju" >
        </activity>
    </application>

</manifest>
